{
	"root": true,
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"project": "./tsconfig.json",
		"ecmaFeatures": {
			"jsx": true
		}
	},
	"plugins": [
		"@typescript-eslint",
		"prettier",
		"unicorn"
	],
	"extends": [
		"airbnb-typescript",
		"airbnb/hooks",
		"react-app",
		"plugin:react-hooks/recommended",
		"eslint:recommended",
		"plugin:@typescript-eslint/eslint-recommended",
		"plugin:@typescript-eslint/recommended",
		"plugin:unicorn/recommended",
		"prettier",
		"plugin:prettier/recommended",
		"prettier/@typescript-eslint",
		"prettier/unicorn",
		"prettier/react"
	],
	"env": {
		"browser": true,
		"jest": true,
		"es6": true
	},
	"rules": {
		"unicorn/filename-case": [
			"error",
			{
				"case": "camelCase"
			}
		]
	},
	"overrides": [
		{
			"files": [
				"*.tsx"
			],
			"rules": {
				"unicorn/filename-case": [
					"error",
					{
						"case": "pascalCase"
					}
				]
			}
		},
		{
			"files": [
				"index.tsx"
			],
			"rules": {
				"unicorn/filename-case": [
					"error",
					{
						"case": "camelCase"
					}
				]
			}
		},
		{
			"files": [
				"*.test.*"
			],
			"rules": {
				"unicorn/filename-case": [
					"off"
				]
			}
		}
	]
}